<p>
  <b>Question:</b>
  <%=h @question.question %>
</p>


<%if(current_user.is_user_in_role(ADMIN_ROLE_ID))%>
<fieldset>
	<legend>admin menu</legend>
		<%= link_to_if !@question.active, "activate", open_voting_company_event_question_path(@company, @event, @question), :method => :put %>
		<%= link_to_if @question.active, "deactivate", close_voting_company_event_question_path(@company, @event, @question), :method => :put %>
</fieldset>
<%end%>

	<% @question.answers.each do |answer|%>
	    <p>
			<% unless @question.active %>
				<%= Vote.count(:all, :conditions => ["answer_id = ?", answer])%>		
			<%else%>
				<%= link_to_if @question.active, image_tag ("/images/apply.png", :border=>0,:width=>16, :height=>16), update_score_company_event_question_path(@company, @event, @question, :answer_id => answer), :method => :post %>
			<%end%>
			<%= h answer.value%>
		</p>
	<%end%>
<%= link_to image_tag("back.png", :border => 0, :width => 16, :height => 16), company_event_path(@company, @event) %>
