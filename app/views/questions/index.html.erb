<h1>Listing questions</h1>

<table>
  <tr>
    <th>Question</th>
    <th>Event</th>
  </tr>

<% for question in @questions %>
  <tr>
    <td><%=h question.question %></td>
    <td><%=h question.event %></td>
    <td><%= link_to image_tag("show.png", :border => 0, :width => 16, :height => 16), question %></td>
    <td><%= link_to image_tag("edit.png", :border => 0, :width => 16, :height => 16), edit_question_path(question) %></td>
    <td><%= link_to image_tag ("trash.png", :border => 0, :width => 16, :height => 16), question, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

