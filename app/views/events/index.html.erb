<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Company</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.date %></td>
    <td><%=h event.company_id %></td>
    <td><%= link_to image_tag ("show.png", :border => 0, :width => 16, :height => 16), event %></td>
    <td><%= link_to image_tag ("edit.png", :border => 0, :width => 16, :height => 16), edit_event_path(event) %></td>
    <td><%= link_to image_tag ("trash.png", :border => 0, :width => 16, :height => 16), event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

