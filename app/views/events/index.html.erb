<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Company</th>
  </tr>

<% for event in @events %>
  <tr>
    <td><%=h event.name %></td>
    <td><%=h event.date %></td>
    <td><%=h event.company_id %></td>
    <td><%= link_to image_tag ("show.png", :border => 0, :width => 16, :height => 16), company_event_path(@company, event) %></td>
    <td><%= link_to_if(current_user.is_user_in_role(ADMIN_ROLE_ID), image_tag ("edit.png", :border => 0, :width => 16, :height => 16), edit_company_event_path(@company, event)) do end %></td>
    <td><%= link_to_if(current_user.is_user_in_role(ADMIN_ROLE_ID), image_tag ("trash.png", :border => 0, :width => 16, :height => 16), company_event_path(@company, event), :confirm => 'Are you sure?', :method => :delete) do end %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to_if(current_user.is_user_in_role(ADMIN_ROLE_ID), image_tag ("add.png", :border => 0, :width => 16, :height => 16), new_company_event_path(@company)) do end %>
