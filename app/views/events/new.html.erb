<h1>New event</h1>

<% form_for(@event, :url => company_events_path(@company)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to image_tag ("back.png", :border => 0, :width => 16, :height => 16), company_path(@company) %>
