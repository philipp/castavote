<h1>Editing event</h1>

<% form_for(@event, :url => company_event_path(@company, @event)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', company_event_path(@company, @event)  %> |
<%= link_to 'Back', company_path(@company) %>
