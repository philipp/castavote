<h1>Editing company</h1>

<% form_for(@company) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to image_tag ("back.png", :border => 0, :width => 16, :height => 16), companies_path %>
<%= link_to image_tag ("show.png", :border => 0, :width => 16, :height => 16), @company %>
